<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutsActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Workouts"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:id="@+id/filterScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <Button android:id="@+id/btnFilterAll"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="All" android:layout_marginEnd="8dp"
                android:backgroundTint="#F5F5F5" android:textColor="#000000" />

            <Button android:id="@+id/btnFilterRunning"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Running" android:layout_marginEnd="8dp"
                android:backgroundTint="#B3DCB5" android:textColor="#2D6A4F" />

            <Button android:id="@+id/btnFilterStrength"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Strength" android:layout_marginEnd="8dp"
                android:backgroundTint="#E7C7EB" android:textColor="#4A148C" />

            <Button android:id="@+id/btnFilterCardio"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Cardio" android:layout_marginEnd="8dp"
                android:backgroundTint="#EFB0C3" android:textColor="#C2185B" />

            <Button android:id="@+id/btnFilterPilates"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Pilates" android:layout_marginEnd="8dp"
                android:backgroundTint="#E3F2FD" android:textColor="#1A4375" />

            <Button android:id="@+id/btnFilterRecent"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Last 5"
                android:backgroundTint="#E0E0E0" android:textColor="#424242" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/workoutCardEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/filterScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="No workouts found" android:padding="20dp"
            android:gravity="center" android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWorkouts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/filterScrollView"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_workouts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_workouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>