<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8DFF5"> <TextView
    android:id="@+id/tvAddPost"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:text="Add Post"
    android:textColor="#5E548E"
    android:textSize="32sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddPost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#5E548E"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:hint="Title"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etContent"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext"
                android:gravity="top"
                android:hint="Write something..."
                android:padding="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="2"
                android:rowCount="2">

                <Button
                    android:id="@+id/btnRunning"
                    style="@style/WorkoutButtonStyle"
                    android:backgroundTint="#D1E9F6"
                    android:text="Running"
                    android:textColor="#2A9D8F"
                    app:icon="@drawable/ic_running"/>
<!--                    app:iconTint="#2A9D8F" />-->

                <Button
                    android:id="@+id/btnStrength"
                    style="@style/WorkoutButtonStyle"
                    android:backgroundTint="#E8DFF5"
                    android:text="Strength"
                    android:textColor="#9D8189"
                    app:icon="@drawable/ic_strength"
                    app:iconTint="#9D8189" />

                <Button
                    android:id="@+id/btnCardio"
                    style="@style/WorkoutButtonStyle"
                    android:backgroundTint="#FAD2E1"
                    android:text="Cardio"
                    android:textColor="#880E4F"
                    app:icon="@drawable/ic_cardio"
                    app:iconTint="#880E4F" />

                <Button
                    android:id="@+id/btnPilates"
                    style="@style/WorkoutButtonStyle"
                    android:backgroundTint="#D0E1F9"
                    android:text="Pilates"
                    android:textColor="#1A4375"
                    app:icon="@drawable/ic_pilates"
                    app:iconTint="#1A4375" />
            </GridLayout>

            <Button
                android:id="@+id/btnPost"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#E5989B"
                android:text="Post"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:cornerRadius="25dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>