<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvHelloUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Hello, Rachel!"
                android:textColor="#1A237E"
                android:textSize="32sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_card_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”¥ Today's streak: 12 days"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­ 650"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:text="Recent workouts"
                android:textColor="#1A237E"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btnRunning"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_card_bg"
                android:backgroundTint="#B2EBF2"
                android:gravity="center_vertical"
                android:paddingStart="20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸƒ Running" android:textSize="20sp" android:textStyle="bold" android:textColor="#1A237E"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnStrength"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_card_bg"
                android:backgroundTint="#E1BEE7"
                android:gravity="center_vertical"
                android:paddingStart="20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ’ª Strength" android:textSize="20sp" android:textStyle="bold" android:textColor="#1A237E"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCardio"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_card_bg"
                android:backgroundTint="#F8BBD0"
                android:gravity="center_vertical"
                android:paddingStart="20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸš´ Cardio" android:textSize="20sp" android:textStyle="bold" android:textColor="#1A237E"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnPilates"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_card_bg"
                android:backgroundTint="#FFF9C4"
                android:gravity="center_vertical"
                android:paddingStart="20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ§˜ Pilates" android:textSize="20sp" android:textStyle="bold" android:textColor="#1A237E"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/btnworkouts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_workouts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workouts"
                android:textColor="@color/nav_active"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnchallenges"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_challenges" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenges"
                android:textColor="@color/nav_active"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnposts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_posts"
                app:tint="@color/nav_inactive" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:textColor="@color/nav_active"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnprofile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/nav_active"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>