<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:orientation="vertical">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvHelloUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Hello, Rachel!"
                android:textColor="#1A237E"
                android:textSize="32sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_card_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”¥ Today's streak: 12 days"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­ 650"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:text="choose your workout for today!"
                android:textColor="#1A237E"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btnRunning"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_card_bg"
                android:backgroundTint="#B2EBF2"
                android:gravity="center_vertical"
                android:paddingStart="20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸƒ Running" android:textSize="20sp" android:textStyle="bold" android:textColor="#1A237E"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnStrength"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_card_bg"
                android:backgroundTint="#E1BEE7"
                android:gravity="center_vertical"
                android:paddingStart="20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ’ª Strength" android:textSize="20sp" android:textStyle="bold" android:textColor="#1A237E"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCardio"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_card_bg"
                android:backgroundTint="#F8BBD0"
                android:gravity="center_vertical"
                android:paddingStart="20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸš´ Cardio" android:textSize="20sp" android:textStyle="bold" android:textColor="#1A237E"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnPilates"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_card_bg"
                android:backgroundTint="#FFF9C4"
                android:gravity="center_vertical"
                android:paddingStart="20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ§˜ Pilates" android:textSize="20sp" android:textStyle="bold" android:textColor="#1A237E"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="#1A237E"
        app:itemTextColor="#1A237E"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="40dp"
        app:itemPaddingTop="8dp"
        app:itemPaddingBottom="8dp"
        app:itemActiveIndicatorStyle="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bottom_nav"
        app:backgroundTint="@null"/>

</LinearLayout>