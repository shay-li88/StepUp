<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3DCB5"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_running" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Running"
            android:textColor="#2D6A4F"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Difficulty"
                android:textColor="#2D6A4F"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/difficulty_bar"
                android:padding="4dp">
                <Button
                    android:id="@+id/btnEasy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Easy"
                    android:textAllCaps="false"
                    android:textColor="#40916C"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/btnMedium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Medium"
                    android:textAllCaps="false"
                    android:textColor="#40916C"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/btnIntense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Intense"
                    android:textAllCaps="false"
                    android:textColor="#40916C"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Time (minutes)"
                android:textColor="#2D6A4F"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/picker_bg"
                android:gravity="center"
                android:padding="5dp">
                <NumberPicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Distance (km)"
                android:textColor="#2D6A4F"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/picker_bg"
                android:gravity="center"
                android:padding="5dp">
                <NumberPicker
                    android:id="@+id/distancePicker"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add Details"
                android:textColor="#2D6A4F"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etRunningNotes"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/picker_bg"
                android:gravity="top"
                android:hint="Any notes to improve for next time?"
                android:padding="12dp"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnGoActivity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#40916C"
        android:text="Save your Activity"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="30dp" />
</LinearLayout>